                    @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                </div>*@
            <div class="col-md-4">
                <input type="submit" value="创建" class="btn btn-default" name="agent" />
                <input type="submit" value="删除" class="btn btn-default" name="agent" />
            </div>
            <div class="col-md-8 form-control col-lg-offset-2" style="margin-top:15px">
