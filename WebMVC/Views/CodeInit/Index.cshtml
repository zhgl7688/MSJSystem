            </div>
            <div class="col-md-8 form-control col-lg-offset-2" style="margin-top:15px">
                @{ foreach (var item in ViewBag.stageList as SelectList)
                    {
                        <span>@(item.Text + ",")</span>
                    }
                }
            </div>
        </div>
    }
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label class="control-label col-md-2">品牌商</label>

            <div class="col-md-3">
                @Html.TextBoxFor(Model => Model.Value,new { @class = "form-control" })
            </div>
            <div class="col-md-2">
                <input id="create" type="submit" value="创建" class="btn btn-default" name="brand" />
            </div>
