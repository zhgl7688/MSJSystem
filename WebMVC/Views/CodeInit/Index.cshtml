            <div class="col-md-2">
                <input id="delete" type="submit" value="删除" class="btn btn-default" name="brand" />
            </div>
            <div class="col-md-8 form-control col-lg-offset-2" style="margin-top:15px">
                @{ foreach (var item in ViewBag.brandList as SelectList)
            {
