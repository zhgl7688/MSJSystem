<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 进销存管理</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .up {
            position: absolute;
            right: 0px;
            top: 8px;
            text-align:right;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("首页", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li class="active">@Html.ActionLink("主页", "Index", "Home")</li>*@

                    <li>@Html.ActionLink("代理商组", "Index", "AgentInput")</li>
                    <li>@Html.ActionLink("品牌商组", "Index", "BrandsInput")</li>
                    <li class="dropdown hidden">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            中间表
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("品牌力", "BrandStrength", "Home")</li>
                            <li>@Html.ActionLink("产品创新力", "ProductInnovation", "Home")</li>
                            <li>@Html.ActionLink("市场推广", "MarketPromotion", "Home")</li>

                            <li>@Html.ActionLink("渠道服务", "ChannelService", "Home")</li>

                            <li>@Html.ActionLink("市场价格", "MarketPrice", "Home")</li>
                            <li>@Html.ActionLink("意愿指数", "IntentionIndex", "Home")</li>

                            <li>@Html.ActionLink("价格管控表", "PriceControl", "Home")</li>
                            <li>@Html.ActionLink("当年占有率", "CurrentShare", "Home")</li>
                            <li>@Html.ActionLink("进货报表", "StockReport", "Home")</li>
                            <li>@Html.ActionLink("投资表", "InvertmentTable", "Home")</li>
                            <li>@Html.ActionLink("进销存报表", "InvoicingReport", "Home")</li>
                            <li>@Html.ActionLink("资产汇总表", "SummaryAssent", "Home")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            PPT列表
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("第一期PPT", "FirstPPT", "Home")</li>
                            <li>@Html.ActionLink("第二期PPT", "SecondPPT", "Home")</li>
                            <li>@Html.ActionLink("第三期PPT", "ThirdPPT", "Home")</li>
                            <li>@Html.ActionLink("最终市场占有率", "LastBrand", "Home")</li>
                        </ul>
                    </li>


                    @{if (User.IsInRole("Administrators"))
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    参数设置
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="/DataInits/Edit/1">初始化数据设定</a></li>

                                    @*<li><a href="/BrandStrengthInits/Edit/1">品牌力</a></li>
                                    <li><a href="/ProductInnovationInits/Edit/1">产品创新力</a></li>
                                    <li><a href="/MarketPromotionInits/Edit/1">市场推广</a></li>
                                    <li><a href="/ChannelServiceInits/Edit/1">渠道服务</a></li>
                                    <li><a href="/MarketPriceInits/Edit/1">市场价格</a></li>
                                    <li><a href="/CurrentShareInits/">市场容量</a></li>*@
                                    <li role="separator" class="divider"></li>
                                    <li><a href="/CodeInit/">阶段、代理商名称管理</a></li>
                                    <li><a href="/StageAdds/">阶段内容管理</a></li>
                                </ul>
                            </li>
                            <li>@Html.ActionLink("用户管理", "Index", "Admin")</li>
                            <li>@Html.ActionLink("角色管理", "Index", "Role")</li>
                            @*<li>@Html.ActionLink("Claims", "Index", "Claims")</li>*@
                        }

                    }

                </ul>
                <ul class="navbar-right">
                    <li>@Html.Partial("_LoginPartial")</li>
                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 进销存管理</p>   @ViewData["role"]
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<script>
    var index = "@ViewBag.Title";
    var lis = $('.navbar-nav li');
    for (var i = 0; i < lis.length; i++) {

        if (index == lis[i].innerText) {
            $(lis[i]).addClass("active");
          break;
        }
    }

</script>