
@model WebMVC.Models.AgentInput

@{
    ViewBag.Title = "代理商组";
}

<h2> </h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group hidden">

            @Html.LabelFor(model => model.AgentId, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.AgentId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AgentId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="panel panel-primary">
            <div class="panel-heading">代理商投入表创建</div>

            <div class="panel-body">
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.AgentName, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-6">
                        @Html.DropDownList("AgentName", string.Empty)
                        @Html.ValidationMessageFor(model => model.AgentName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.Stage, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-6">
                        @Html.DropDownList("Stage", string.Empty)
                        @* @Html.DropDownListFor(model => model.Stage,ViewBag.StageId, "请选择", new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.ValidationMessageFor(model => model.Stage, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
        </div>
        <div class="panel panel-primary">
            <div class="panel-heading">投资表 </div>

            <div class="panel-body" id="invest">
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.EndImage, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.EndImage, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EndImage, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.Salesperson, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Salesperson, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Salesperson, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.HousePromote, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.HousePromote, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.HousePromote, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.demonstrator, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.demonstrator, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.demonstrator, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.outdoorActivity, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.outdoorActivity, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.outdoorActivity, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.promotionTeam, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.promotionTeam, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.promotionTeam, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.servet, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.servet, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.servet, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.bankLoan, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.bankLoan, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.bankLoan, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-12 col-md-offset-10"><span style="font-weight:700;margin:10px 10px">合计金额：</span><span id="investSum">0</span>万元</div>
            </div>
        </div>
        <div class="panel panel-primary">
            <div class="panel-heading">价格管控表</div>

            <div class="panel-body" id="jggkb">
               
                @{ foreach (var item in ViewBag.StageAdd)
                    {
                        <div class="form-group col-md-3" hidden>
                            <label class="control-label col-md-6" data-show='@item.Stage' for="brandAgent">@item.retail</label>
                            <div class="col-md-6">
                                <input class="form-control text-box single-line" name="@item.retail" type="text" value="@item.retailPrice">
                            </div>
                        </div>
                    }
                }

            </div>
        </div>


        <div class="panel panel-primary">
            <div class="panel-heading">进货表</div>

            <div class="panel-body" id="jhb">
                <div class="form-group col-md-4 hidden">
                    @Html.LabelFor(model => model.brandAgent, htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.brandAgent, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.brandAgent, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-3 rc0">
                    @Html.LabelFor(model => model.BasePurchase, htmlAttributes: new { @class = "control-label col-md-5",data_show = "第1阶段" })
